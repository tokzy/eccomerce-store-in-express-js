<div class="container">
<div class="row">
<div class="col-md-12">
<div style = "width:500px;margin: 0 auto;background:white;box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;padding:30px;">
<% if(messages.message){%>
<% if(messages.message == 'success'){%>
<div class="alert alert-success">Login Succesful...</div>
<script>
 setTimeout(() => {window.location ='/category'},1000);   
</script>
<%}else{%>
<div class="alert alert-danger"><%= messages.message %></div>
<%}%>
<%}%>    
<form method="post" action="/login">
<input type="hidden" name="_csrf" value="<%= csrfToken  %>">     
<label>Email</label>  
<input type="email" name="email" class="form-control" />
<% if(errors.email) {%>
<span class="text-danger"><%= errors.email %></span><br/>    
<%}%>
<label>Password</label>
<input type="password" class="form-control" name="password" />
<% if(errors.password) {%>
<span class="text-danger"><%= errors.password %></span><br/>    
<%}%><br/>
<button type="submit" name="submit" class="btn btn-success" style="width:100%;">Login</button>
</form>
