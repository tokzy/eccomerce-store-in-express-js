</div>
</div>
</div>
</div>
</section>
<!--================End Home Banner Area =================-->

<!--================Category Product Area =================-->
<section class="cat_product_area section_gap">
<div class="container">
<div class="row flex-row-reverse">
<div class="col-lg-9">
<div class="product_top_bar">
<div class="left_dorp">
<select class="sorting">
<option value="1">Default sorting</option>
<option value="2">Default sorting 01</option>
<option value="4">Default sorting 02</option>
</select>
<select class="show">
<option value="1">Show 12</option>
<option value="2">Show 14</option>
<option value="4">Show 16</option>
</select>
</div>
</div>

<div class="latest_product_inner">
<div class="row">  
    
<!----======= Fetch All====================================-->
<% if (typeof products === 'undefined') { %> 
<% } else { %>    
<% products.forEach(product => {%>    
<div class="col-lg-4 col-md-6">
<div class="single-product">
<div class="product-img">
<img class="card-img" src="/img/product/<%= product.cover_image %>" alt="" />
<div class="p_icon">
<a href="#">
<i class="ti-eye"></i>
</a>
<a href="#">
<i class="ti-heart"></i>
</a>
<a href="#">
<i class="ti-shopping-cart"></i>
</a>
</div>
</div>
<div class="product-btm">
<a href="#" class="d-block">
<h4><%= product.name %></h4>
</a>
<% if(!!product.discount) { %>
<div class="mt-3">
<span class="mr-4">₦<%= (product.discount).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %></span>
<del>₦<%= product.price %></del>
</div>
<%} else {%>
<div class="mt-3">
<span class="mr-4">₦<%= (product.price).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %></span>
</div>
<% } %>
</div>
</div>
</div>
<% }) %>
<% } %>
</div>
</div>
</div>
<!----======= Fetch All Ends====================================-->

<div class="col-lg-3">
<div class="left_sidebar_area">
<aside class="left_widgets p_filter_widgets">
<div class="l_w_title">
<h3>Browse Categories</h3>
</div>
<div class="widgets_inner">
<ul class="list">
<% categories.forEach((category) => { %>
<li>
<a href="/category/<%= category.id %>"><%= category.name %></a>
</li>
<% })%>
</ul>
</div>
</aside>

<aside class="left_widgets p_filter_widgets">
<div class="l_w_title">
<h3>Product Brand</h3>
</div>
<div class="widgets_inner">
<ul class="list">
<% brands.forEach(brand => {%>
<li>
<a href="/brand/<%= brand.id %>"><%= brand.name %></a>
</li>
<% })%>
</ul>
</div>
</aside>

</div>
</div>
</div>
</div>
</section>
<!--================End Category Product Area =================-->

